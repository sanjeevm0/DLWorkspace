@{
    ViewData["Title"] = "Manage Users";
}

<h2>@ViewData["Title"]</h2>

<table id="users-table" class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email Address</th>
            <th>Account Type</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in ViewData["Users"] as List<string[]>)
        {
            <tr>
                <td> @item[0] </td>
                <td> @item[1] </td>
                <td><a href=@("/Home/ManageUser/?AccountChangeEmail="+item[1]) class="@item[2]"> @item[2] </a></td>
            </tr>
        }
    </tbody>
</table>


<style>
    .Admin {
        background-color: #0e8a16;
        -moz-border-radius: 4px;
        -webkit-border-radius: 4px;
        border-radius: 4px;
        color: #ffffff;
        font-weight: bold;
        padding: 2px 5px;
        text-decoration: none
    }

        .Admin:hover, .Admin:visited, .Admin:active, .Admin:link {
            background-color: #0f9916;
            color: #ffffff;
            text-decoration: none;
        }

    .User {
        background-color: #0052cc;
        -moz-border-radius: 4px;
        -webkit-border-radius: 4px;
        border-radius: 4px;
        color: #ffffff;
        font-weight: bold;
        padding: 2px 5px;
        text-decoration: none
    }

        .User:hover, .User:visited, .User:active, .User:link {
            background-color: #0052cc;
            color: #ffffff;
            text-decoration: none;
        }

    .Unauthorized {
        background-color: #fbca04;
        -moz-border-radius: 4px;
        -webkit-border-radius: 4px;
        border-radius: 4px;
        color: #332900;
        font-weight: bold;
        padding: 2px 5px;
        text-decoration: none
    }

        .Unauthorized:hover, .Unauthorized:visited, .Unauthorized:active, .Unauthorized:link {
            background-color: #fbca04;
            color: #332900;
            text-decoration: none;
        }
</style>