{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "clustername": {
            "type": "string"
        },
        "clusterlocation": {
            "type": "string",
            "defaultValue": "westus2"
        },
        "workervmsize": {
            "type": "string",
            "defaultValue": "Standard_NC6"
        },
        "infravmsize": {
            "type": "string",
            "defaultValue": "Standard_D1_v2"
        },
        "workernodenum": {
            "type": "int",
            "defaultValue": "2"
        },
        "infranodenum": {
            "type": "int",
            "defaultValue": "1"
        },
        "vmpassword": {
            "type": "securestring"
        }
    },
    "resources": [
        {
            "comments": "Virtual Network for cluster.",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[concat(parameters('clustername'), '-VNet']",
            "apiVersion": "2018-02-01",
            "location": "westus2",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "192.168.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "mySubnet",
                        "properties": {
                            "addressPrefix": "192.168.0.0/16"
                        }
                    }
                ]
            },
            "dependsOn": []
        }
    ]
}
