version: 1
formatters:
  simple:
    format: '%(asctime)s - %(name)s - %(levelname)s - %(message)s'
handlers:
  console:
    class: logging.StreamHandler
    level: DEBUG
    formatter: simple
    stream: ext://sys.stdout
  file:
    class : logging.handlers.RotatingFileHandler
    formatter: simple
    filename: {{cnf["loggingDir"]}}/bootstrap.log
    # roll over at 10MB
    maxBytes: 10240000
    # At most 10 logging files
    backupCount: 10
loggers:
  basic:
    level: DEBUG
    handlers: ['console','file']
    propagate: no
root:
  level: DEBUG
  handlers: ['console','file']